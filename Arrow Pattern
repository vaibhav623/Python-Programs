n=int(input())
i=1
while i<=n//2:
    for spaces in range (1,i):
        print(" ",end="")
    for j in range (1,i+1):
        print("*",end=" ")
    print()
    i+=1
k=n//2+1
while k>=1:
    
    for spaces in range (1,k):
        print(" ",end="")
    
    for j in range (1,k+1):
        print("*",end=" ")
    print()
    k-=1
        

    
