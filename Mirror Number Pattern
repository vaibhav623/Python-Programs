n=int(input())
k=n
for i in range(1,n+1):
    for j in range (1,i+1):
        print(j,end="")
    
   
    for spaces in range (1,k):
        print(" ",end="")
    k-=1
    
    for spaces in range (1,n-i+1):
        print(" ",end="")
    for j in range(1,i+1):
        print(i,end="")
        i-=1
    print()
    
    
           
           
    
